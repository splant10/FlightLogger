<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ca.lakeland.plantsd.flightlogger.HomeScreen"
    android:background="@drawable/bkg_gradient">

    <include layout="@layout/app_bar"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FlightLogger"
        android:id="@+id/txtTitle"
        android:textSize="55sp"
        android:textAlignment="center"
        android:onClick="clearStoredData"
        android:layout_gravity="center" />
    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Preflight Checklist"
            android:id="@+id/btnFlightPlan"
            android:onClick="openFlightPlanner"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Flight Logs"
            android:id="@+id/btnFlightLog"
            android:onClick="openFlightLogger"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Pilots &amp; Spotters"
            android:id="@+id/btnPilots"
            android:onClick="btnPilotsClick"
            android:textSize="20sp" />
    </LinearLayout>
    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/imgLogo"
        android:src="@drawable/csi_logo"
        android:layout_weight="1"
        tools:ignore="ContentDescription" />
    <!-- android:onClick="onLogoClick" /> -->
    <Space
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

</LinearLayout>
