<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.lakeland.plantsd.flightlogger.PilotInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/txtPilotName"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtPilotName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total Flights"
                android:id="@+id/textView"
                android:layout_column="0"
                android:textSize="20dp"
                android:layout_gravity="left"
                android:layout_width="fill_parent"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/txtPilotFlights"
                android:layout_column="1"
                android:textSize="20dp"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total Flight Time"
                android:id="@+id/textView2"
                android:layout_column="0"
                android:textSize="20dp"
                android:layout_gravity="left"
                android:layout_width="fill_parent"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="0"
                android:id="@+id/txtPilotTime"
                android:layout_column="1"
                android:textSize="20dp"
                android:layout_gravity="right" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
