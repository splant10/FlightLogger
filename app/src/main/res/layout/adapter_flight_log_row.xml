<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/question_mark"
        android:id="@+id/lvtxtLogNum"
        android:layout_marginRight="15dp"
        android:layout_marginStart="24dp"
        android:layout_alignTop="@+id/lvtxtLogPayload"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/lvtxtLogDate"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lvtxtLogNum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Payload"
        android:id="@+id/lvtxtLogPayload"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/lvtxtLogDate"
        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/lvtxtLogDate"
        android:layout_alignBottom="@+id/lvtxtLogDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pilot and Spotter"
        android:id="@+id/lvtxtLogPilotSpotter"
        android:layout_below="@+id/lvtxtLogDate"
        android:layout_alignStart="@+id/lvtxtLogDate"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/lvtxtLogLocation"
        android:layout_toEndOf="@+id/lvtxtLogPayload"
        android:layout_marginStart="20dp"
        android:layout_alignBaseline="@+id/lvtxtLogPayload" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Flights: 0"
        android:id="@+id/lvtxtLogFlights"
        android:layout_alignTop="@+id/lvtxtLogPilotSpotter"
        android:layout_toEndOf="@+id/lvtxtLogPilotSpotter"
        android:layout_marginLeft="20dp" />

</RelativeLayout>