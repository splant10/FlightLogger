<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.lakeland.plantsd.flightlogger.AboutActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="About This App"
                android:id="@+id/textView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="    This app was created for the Vermilion Lakeland College Center for Sustainable Innovation (CSI) as a way to efficiently log and store UAV flight information."
                android:id="@+id/textView7"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Administrator Abilities"
                android:id="@+id/textView8"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="    When logged on as Administrator (Admin), the app gains some more functionality; the user can long-click to remove pilots and spotters from the app."
                android:id="@+id/textView9"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="    Long-clicking existing flight logs allows the admin to add extra comments on top of the selected flight log. This is to prevent flight logs from being destroyed. The admin account also has the ability to clear all data. To do so, tap the 'FlightLogger' text on the home screen."
                android:id="@+id/textView10"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="    The administrator can also change the administrator password, but I trust nobody will do this maliciously. With great power comes great responsibility."
                android:id="@+id/textView11"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Help"
                android:id="@+id/textView12"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="    If, for any reason, there is issue with this app (app crashes, forgotten admin password) please contact Spencer Plant with a detailed explanation of the issue: "
                android:id="@+id/textView13"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_email"
                android:id="@+id/txtAboutEmail"
                android:layout_gravity="center_horizontal"
                android:textColor="#165ef9"
                android:onClick="emailSpencer" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
