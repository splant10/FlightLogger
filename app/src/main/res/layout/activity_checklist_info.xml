<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.lakeland.plantsd.flightlogger.ChecklistInfoActivity"
    android:orientation="vertical">

    <include layout="@layout/app_bar"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ca.lakeland.plantsd.flightlogger.ChecklistInfoActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Completed By:"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Robert Downey Jr."
            android:id="@+id/txtChkInfoAuthor"
            android:layout_alignParentEnd="false"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_toEndOf="@id/textView4"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Signature:"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgChkInfoSignature"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:src="@drawable/nosig"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtChkInfoDisclaimer"
            android:layout_below="@+id/imgChkInfoSignature"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/checklist_disclaimer"
            android:textAlignment="center" />
    </RelativeLayout>
</LinearLayout>
