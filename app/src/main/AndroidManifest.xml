<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.lakeland.plantsd.flightlogger">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FlightLogsActivity"
            android:label="@string/title_flightlogs">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.lakeland.plantsd.flightlogger.HomeScreen" />
        </activity>
        <activity
            android:name=".Activities.NewChecklistActivity"
            android:label="@string/title_checklists">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.lakeland.plantsd.flightlogger.HomeScreen" />
        </activity>
        <activity
            android:name=".Activities.NewFlightLogActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PilotsActivity"
            android:label="@string/title_pilots"
            android:parentActivityName=".HomeScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.lakeland.plantsd.flightlogger.HomeScreen" />
        </activity>
        <activity android:name=".NewPilotActivity" />
        <activity android:name=".PilotInfoActivity" />
        <activity android:name=".Activities.FlightLogInfoActivity" />
        <activity android:name=".Activities.TestActivity" />
        <activity
            android:name=".ChecklistsActivity"
            android:label="@string/title_checklists"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.ChecklistInfoActivity" />
        <activity android:name=".Activities.EmailsActivity" />
        <activity android:name=".Activities.AboutActivity" />

    </application>

</manifest>